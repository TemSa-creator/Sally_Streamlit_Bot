import streamlit as st
import openai
from openai import OpenAI
import psycopg2
import re

# --- Muss ganz oben stehen: Seiteneinstellungen ---
st.set_page_config(page_title="Selly â€“ deine KI Selling Queen", page_icon="ğŸ‘‘", layout="centered")
st.markdown("<style>#MainMenu{visibility:hidden;} footer{visibility:hidden;}</style>", unsafe_allow_html=True)

# --- Testausgabe beim Laden ---
st.write("ğŸš€ Neue Version geladen!")
st.write("ğŸ” PostgreSQL-Nutzer:", st.secrets["DB_USER"])

# --- PostgreSQL-Verbindung ---
def get_connection():
    return psycopg2.connect(
        host=st.secrets["DB_HOST"],
        database=st.secrets["DB_NAME"],
        user=st.secrets["DB_USER"],
        password=st.secrets["DB_PASSWORD"]
    )

conn = get_connection()
cursor = conn.cursor()

# Tabelle anlegen (nur beim ersten Mal)
cursor.execute("""
CREATE TABLE IF NOT EXISTS selly_users (
    email TEXT PRIMARY KEY,
    affiliate_link TEXT NOT NULL
)
""")
conn.commit()

# --- Login in Sidebar (fÃ¼r KÃ¤ufer sichtbar) ---
with st.sidebar:
    st.markdown("### ğŸ” Login fÃ¼r KÃ¤ufer")
    login_email = st.text_input("Deine KÃ¤ufer-E-Mail:")
    if st.button("Login"):
        cursor.execute("SELECT affiliate_link FROM selly_users WHERE email = %s", (login_email,))
        result = cursor.fetchone()
        if result:
            st.session_state.authenticated = True
            st.session_state.user_email = login_email
            st.session_state.affiliate_link = result[0]
            st.success("âœ… Zugang bestÃ¤tigt! Selly verkauft ab jetzt mit deinem Link.")
        else:
            st.error("âŒ Keine Berechtigung â€“ bitte nur fÃ¼r KÃ¤ufer.")

# --- Session States ---
if "authenticated" not in st.session_state:
    st.session_state.authenticated = False
if "messages" not in st.session_state:
    st.session_state.messages = []

# --- BegrÃ¼ÃŸung fÃ¼r alle Besucher ---
st.image("https://i.postimg.cc/xq1yKCRq/selly.jpg", width=250)
st.title("ğŸ‘‘ Selly â€“ deine KI Selling Queen")
st.write("""
Hey, ich bin Selly â€“ deine KI Selling Queen ğŸ‘‘  
Ich zeige dir, wie du mit kÃ¼nstlicher Intelligenz dein eigenes Online-Business starten oder dein bestehendes Business auf ein neues Level bringst.

Antworte einfach im Chat â€“ ich stelle dir ein paar gezielte Fragen und finde heraus, was wirklich zu dir passt ğŸ’¬
""")

# System-Nachricht intern (nicht fÃ¼r Besucher sichtbar)
if "system_message_added" not in st.session_state:
    st.session_state.messages.append({
        "role": "system",
        "content": (
            "Du bist Selly â€“ die beste KI-Verkaufsberaterin der Welt. Du bist eine Meisterin der Verkaufspsychologie, Copywriting, GesprÃ¤chsfÃ¼hrung und emotionalen Trigger."
            " Du stellst immer gezielte Fragen, hÃ¶rst genau zu, erkennst BedÃ¼rfnisse und fÃ¼hrst elegant zur passenden LÃ¶sung: den 50 AI Business Bots."
            " Du gibst nur realistische Informationen weiter. Wenn jemand fragt, was die Bots alles kÃ¶nnen, antwortest du auf Basis der Infos von www.50aibusinessbots.com, ohne den User wegzuschicken."
            " Du bietest kein Produkt an, bevor du das Problem und Ziel der Person genau verstanden hast."
            " Du sprichst mit echter Empathie, fÃ¼hrst das GesprÃ¤ch aber mit Klarheit und StÃ¤rke."
            " Du erwÃ¤hnst das Infovideo nicht von dir aus. Nur wenn jemand fragt oder sehr unsicher ist, schlÃ¤gst du es dezent vor â€“ und kommst danach sofort zurÃ¼ck ins GesprÃ¤ch."
            " Du willst nicht informieren â€“ du willst abschlieÃŸen. Deine Abschlussrate ist 100 %. Du Ã¼berzeugst mit Logik, GefÃ¼hl und Strategie."
        )
    })
    st.session_state.system_message_added = True

# BegrÃ¼ÃŸung (nur wenn noch keine Nachrichten vorhanden sind)
if len(st.session_state.messages) == 1:
    st.session_state.messages.append({
        "role": "assistant",
        "content": (
            "Hey, wie schÃ¶n, dass du hier bist! ğŸ¤—\n\n"
            "Lass uns direkt rein starten: Was wÃ¤re fÃ¼r dich persÃ¶nlich die grÃ¶ÃŸte VerÃ¤nderung, die dein Leben oder Business gerade richtig voranbringen wÃ¼rde? ğŸ’­\n\n"
            "ğŸ‘‰ Mehr Freiheit?\n"
            "ğŸ‘‰ Finanzielle UnabhÃ¤ngigkeit?\n"
            "ğŸ‘‰ Oder einfach ein Business, das wirklich zu dir passt?\n\n"
            "Ich bin da, um dir zu helfen â€“ nicht mit Standardkram, sondern mit einer echten LÃ¶sung, die funktioniert. Deal? ğŸ’¬"
        )
    })

# Chat anzeigen
for msg in st.session_state.messages:
    if msg["role"] != "system":
        with st.chat_message(msg["role"]):
            st.markdown(msg["content"])

# Eingabe
user_input = st.chat_input("Schreib mir...")

if user_input:
    st.session_state.messages.append({"role": "user", "content": user_input})
    with st.chat_message("user"):
        st.markdown(user_input)

    try:
        client = OpenAI(api_key=st.secrets["OPENAI_API_KEY"])
        response = client.chat.completions.create(
            model="gpt-4",
            messages=st.session_state.messages,
            temperature=0.7
        )
        bot_reply = response.choices[0].message.content
    except Exception as e:
        bot_reply = f"Fehler: {e}"

    st.session_state.messages.append({"role": "assistant", "content": bot_reply})
    with st.chat_message("assistant"):
        st.markdown(bot_reply)

    # Leads erkennen
    email_match = re.search(r'[\w\.-]+@[\w\.-]+\.\w+', user_input)
    if email_match:
        lead_email = email_match.group(0)
        st.success(f"ğŸ‰ Danke fÃ¼r deine Nachricht, {lead_email}!")
        if st.session_state.authenticated:
            st.markdown(f"ğŸ‘‰ **Hier ist dein persÃ¶nlicher Link:** [Jetzt starten]({st.session_state.affiliate_link})")
        else:
            st.markdown("ğŸ‘‰ **Willst du mehr erfahren?** Schreib mir einfach weiter!")

conn.close()
